    <profileDesc>
      <abstract><p>
        Обвинения <persName ref="Авигдор">Авигдора</persName> против <orgName ref="Хасиды">хасидов</orgName>
      </p></abstract>
      <creation><date when="1800-11-15..16">15 или 16 ноября 1800</date></creation>
    </profileDesc>
